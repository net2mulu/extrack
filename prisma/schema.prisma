generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// -----------------------------------------------------------------------------
// Core Enums
// -----------------------------------------------------------------------------
enum TransactionType {
  INCOME
  EXPENSE
}

enum RecurringStatus {
  DUE
  PAID
  SKIPPED
  PARTIAL
}

// -----------------------------------------------------------------------------
// Authentication Models (NextAuth.js)
// -----------------------------------------------------------------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // Hashed password for credentials provider
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts          Account[]
  sessions          Session[]
  transactions      Transaction[]
  budgets           Budget[]
  savingGoals       SavingGoal[]
  monthLedgers      MonthLedger[]
  recurringRules    RecurringRule[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// -----------------------------------------------------------------------------
// Models
// -----------------------------------------------------------------------------

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  icon      String?  // Emoji or icon name
  color     String?  // Hex code
  isDefault Boolean  @default(false)
  
  transactions   Transaction[]
  recurringRules RecurringRule[]
  budgets        Budget[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id          String          @id @default(cuid())
  amount      Float
  type        TransactionType
  date        DateTime        @default(now()) // spentAt
  note        String?
  vendor      String?
  tags        String[]
  
  userId      String
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  category    Category?       @relation(fields: [categoryId], references: [id])
  categoryId  String?

  // Link to a recurring instance if this payment satisfies a bill
  recurringInstance   RecurringInstance? @relation(fields: [recurringInstanceId], references: [id])
  recurringInstanceId String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
  @@index([userId])
}

model RecurringRule {
  id          String   @id @default(cuid())
  name        String
  amount      Float
  dayOfMonth  Int      // 1-31
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  active      Boolean  @default(true)
  
  // E.g. "MONTHLY" - for now we assume all are monthly based on requirements
  interval    String   @default("MONTHLY") 

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  instances   RecurringInstance[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model RecurringInstance {
  id          String          @id @default(cuid())
  monthKey    String          // "YYYY-MM"
  status      RecurringStatus @default(DUE)
  amountDue   Float
  
  rule        RecurringRule   @relation(fields: [ruleId], references: [id])
  ruleId      String

  // One instance can have multiple payments if split (PARTIAL -> PAID)
  payments    Transaction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([ruleId, monthKey])
}

model MonthLedger {
  id          String   @id @default(cuid())
  monthKey    String   // "YYYY-MM"
  income      Float    @default(0)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, monthKey])
  @@index([userId])
}

model Budget {
  id          String   @id @default(cuid())
  monthKey    String // "YYYY-MM"
  limit       Float
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, categoryId, monthKey])
  @@index([userId])
}

model SavingGoal {
  id            String    @id @default(cuid())
  title         String
  targetAmount  Float
  currentAmount Float     @default(0)
  deadline      DateTime?
  color         String?   // For UI visuals
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}
